<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- To run multiple tests in parallel(change thread count)-->
<suite name="Loan Department" parallel="tests" thread-count="2">
	<!-- passing global parameter to test-->
	<listeners>
		<listener class-name="test3.Listeners"></listener>
	</listeners>
	
	<!-- To run multiple methods in parallel inside a class -->
	<test name="Test1" parallel="classes" thread-count="2">
		<classes>
			<class name="test.Bike"></class>
		</classes>
	</test>
  
</suite> <!-- Suite -->
